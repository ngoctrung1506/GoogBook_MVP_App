<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:textSize="@dimen/text_size_14sp"
        android:gravity="center|left"
        android:paddingTop="@dimen/size_10dp"
        android:paddingBottom="@dimen/size_10dp"
        android:layout_marginLeft="@dimen/size_15dp"
        android:id="@+id/dialog_update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

     <EditText
         android:textCursorDrawable="@drawable/bg_cursor"
         android:backgroundTint="@android:color/transparent"
         android:textSize="@dimen/text_size_15sp"
         android:gravity="center|left"
         android:paddingTop="@dimen/size_10dp"
         android:paddingBottom="@dimen/size_10dp"
         android:layout_marginLeft="@dimen/size_15dp"
         android:id="@+id/dialog_update_value"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>

    <View style="@style/Divider"/>

    <LinearLayout
        android:layout_marginTop="@dimen/size_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingBottom="@dimen/size_10dp"
            android:id="@+id/dialog_update_btn_cancel"
            android:paddingTop="@dimen/size_10dp"
            android:textSize="@dimen/text_size_17sp"
            android:gravity="center"
            android:text="@string/dialog_update_delete"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingBottom="@dimen/size_10dp"
            android:id="@+id/dialog_update_btn_update"
            android:paddingTop="@dimen/size_10dp"
            android:textSize="@dimen/text_size_17sp"
            android:gravity="center"
            android:text="@string/dialog_update_update"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>