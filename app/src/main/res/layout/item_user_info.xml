<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/colorWhite"
    android:id="@+id/item_user_info_root"
    android:layout_marginTop="@dimen/size_5dp"
    android:layout_marginBottom="@dimen/size_5dp"
    android:layout_marginRight="@dimen/size_5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:paddingLeft="@dimen/size_5dp"

        android:id="@+id/item_user_info_title"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

     <TextView
         android:paddingLeft="@dimen/size_5dp"
         android:layout_marginTop="@dimen/size_12dp"
         android:id="@+id/item_user_info_value"
         android:layout_below="@+id/item_user_info_title"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

      <!--<ImageView-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:src="@mipmap/ic_edit"-->
        <!--android:layout_width="@dimen/size_25dp"-->
        <!--android:layout_height="@dimen/size_25dp"/>-->

    <View
        android:layout_marginTop="@dimen/size_5dp"
        android:layout_below="@+id/item_user_info_value"
        style="@style/Divider"/>

</RelativeLayout>